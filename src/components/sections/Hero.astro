---
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';

interface HeroContent {
    title: string;
    subtitle: string;
    buttons?: {
        text: string;
        link: string;
        variant?: 'primary' | 'secondary' | 'ghostLight' | 'ghostDark';
        target?: string;
    }[];
    backgroundImage?: string | any; // Using any for now to handle both string paths and imported images
    overlayOpacity?: number; // Value between 0 and 1
    overlayImage?: string | any;
}

interface Props {
    content: HeroContent;
}

const { content } = Astro.props;
const opacity = content.overlayOpacity ?? 1; // Default opacity if not specified
---

<section class="header-offset relative">
    {
        content.backgroundImage && (
            <div class="absolute inset-0 left-0 top-0 w-full h-full overflow-hidden">
                <Image
                    src={content.backgroundImage}
                    alt=""
                    width={1920}
                    height={1080}
                    class="w-full h-full object-cover filter grayscale"
                    quality={70}
                    format="webp"
                    loading="eager"
                    decoding="async"
                />
                <div
                    class="hero-background absolute inset-0 left-0 top-0 w-full h-full overflow-hidden"
                    style={`opacity: ${opacity};`}
                />
            </div>
        )
    }

    <div
        class="site-container mx-auto px-4 py-base relative z-10 flex flex-col md:items-center md:justify-center md:text-center"
    >
        {
            content.overlayImage && (
                <Image
                    src={content.overlayImage}
                    alt="Three logos for the F3 Kankakee regions Legion, Scarif, and Rivendell"
                    quality={70}
                />
            )
        }
        <h1 class="text-white text-shadow-lg/50 text-balance" data-aos="fade-up">{content.title}</h1>
        <h3 class="text-white text-balance text-shadow-lg/50" data-aos="fade-up" data-aos-delay="50">{content.subtitle}</h3>

        <slot name="description" />

        {
            content.buttons && content.buttons.length > 0 && (
                <div class="flex flex-wrap gap-4 mt-8" data-aos="fade-up">
                    {content.buttons.map((button) => (
                        <Button
                            href={button.link}
                            target={button.target || '_self'}
                            variant={button.variant || 'primary'}
                        >
                            {button.text}
                        </Button>
                    ))}
                </div>
            )
        }
    </div>
</section>
