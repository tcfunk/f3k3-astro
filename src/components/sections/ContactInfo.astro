---
import Contact from '@components/forms/Contact.astro';
import { getBackgroundColor, getTextColor, getPaddingClass } from '@utils/styleUtils';
import type { ThemeColor, PaddingSize } from '@utils/styleUtils';
import { siteConfig } from '@data/config';
import { Icon } from 'astro-icon/components';
export interface Props {
    content?: {
        title?: string;
        description?: string;
        contactInfo?: {
            email?: string;
            phone?: string;
            address?: string;
        };
    };
    background?: ThemeColor;
    padding?: PaddingSize;
    paddingTop?: PaddingSize;
    paddingBottom?: PaddingSize;
}
const { content, background = 'base', padding, paddingTop, paddingBottom } = Astro.props;

const bgColor = getBackgroundColor(background);
const textColor = getTextColor(background);
const paddingClass = getPaddingClass({ padding, paddingTop, paddingBottom });
---

<section class:list={[bgColor, paddingClass]}>
    <div class="site-container px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <h2 class:list={[textColor]}>Want to learn more?</h2>
                <p class:list={[textColor]}>Find us on social media, or fill out the form on this page for more information.</p>
                <div class:list={['flex flex-col gap-2 mt-4', textColor]}>
                    <div class:list={['flex items-center gap-2']}>
                        <Icon name="mdi:envelope" />
                        <a href={`mailto:${siteConfig.Socials.Email}`}>{siteConfig.Socials.Email}</a>
                    </div>
                    {
                        siteConfig.Socials.Facebook && (
                            <div class:list={['flex items-center gap-2']}>
                                <Icon name="mdi:facebook" />
                                <a target="_blank" href={siteConfig.Socials.Facebook}>
                                    Facebook
                                </a>
                            </div>
                        )
                    }
                    {
                        siteConfig.Socials.Instagram && (
                            <div class:list={['flex items-center gap-2']}>
                                <Icon name="mdi:instagram" />
                                <a target="_blank" href={siteConfig.Socials.Instagram}>
                                    Instagram
                                </a>
                            </div>
                        )
                    }
                    {
                        siteConfig.Socials.Location && (
                            <div class:list={['flex items-center gap-2']}>
                                <Icon name="mdi:map-marker" />
                                <a target="_blank" href={siteConfig.Socials.Location}>
                                    Location map
                                </a>
                            </div>
                        )
                    }
                </div>
            </div>
            <div>
                <Contact />
            </div>
        </div>
    </div>
</section>
